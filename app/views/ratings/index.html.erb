<h2>List of ratings</h2>

<p>
  Number of ratings <%= @ratings.count %>
</p>

<ul>
  <% @ratings.each do |rating| %>
    <li><%= rating %> <%= link_to rating.user.username, user_path(rating.user_id) %></li>
  <% end %>
</ul>

<% if @user == current_user %>
  <%= link_to 'new_rating', new_rating_path %>
<% end %>
